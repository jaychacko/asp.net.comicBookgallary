
@model ComicBookGallery.Models.ComicBook[]
@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <h4>@item.DisplayText</h4>
            <img src="/Images/@item.CoverImageFileName"
                 alt="@item.DisplayText"
                 class="img-responsive" />
        </div>


    }
</div>